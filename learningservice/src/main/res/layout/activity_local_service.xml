<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".LocalServiceActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start service"
        android:id="@+id/start_service"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop service"
        android:id="@+id/stop_service"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/start_service"
        android:layout_toEndOf="@+id/start_service"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bind service"
        android:id="@+id/bind_service"
        android:layout_below="@+id/start_service"
        android:layout_alignRight="@+id/start_service"
        android:layout_alignEnd="@+id/start_service"
        android:layout_marginTop="43dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unbind service"
        android:id="@+id/unbind_service"
        android:layout_alignTop="@+id/bind_service"
        android:layout_alignLeft="@+id/stop_service"
        android:layout_alignStart="@+id/stop_service"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start foregroundService"
        android:id="@+id/start_foreground_service"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/bind_service"
        android:layout_alignStart="@+id/bind_service"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stopForegroundService"
        android:id="@+id/stop_foreground_dervice"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/start_foreground_service"
        android:layout_alignLeft="@+id/bind_service"
        android:layout_alignStart="@+id/bind_service"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remoteservicetest"
        android:id="@+id/remote_test"
        android:layout_below="@+id/stop_foreground_dervice"
        android:layout_alignLeft="@+id/stop_foreground_dervice"
        android:layout_alignStart="@+id/stop_foreground_dervice"/>


</RelativeLayout>
